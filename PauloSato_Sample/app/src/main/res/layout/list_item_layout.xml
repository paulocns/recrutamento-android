<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/episode_number_image"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/episode_number"
            android:scaleType="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/episode_number_text"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="E1"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/episode_title_text"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:layout_height="46dp"
            android:layout_toEndOf="@id/episode_number_image"
            android:layout_toRightOf="@id/episode_number_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lines="1"
            android:gravity="center_vertical"
            android:text="teste teste"
            android:textSize="18sp"
            android:textColor="#4a4a4a"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#e1e1e1"/>

</RelativeLayout>